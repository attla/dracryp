{
    "name": "attla/pincryp",
    "description": "A layer of encryption a little too judicious.",
    "keywords": [
        "zunq",
        "attla",
        "laravel",
        "cipher",
        "encrypt",
        "encrypter",
        "cripter"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Nicolau",
            "email": "nicolau@zunq.com"
        }
    ],
    "require": {
        "php": ">=7.2.5",
        "attla/support": "dev-main",
        "tuupola/base58": "^2.1"
    },
    "autoload": {
        "psr-4": {
            "Attla\\Pincryp\\": "src/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Attla\\Pincryp\\PincrypServiceProvider"
            ],
            "aliases": {
                "Pincryp": "Attla\\Pincryp\\Facade"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require-dev": {
        "pestphp/pest": "^1.22",
        "phpbench/phpbench": "^1.2",
        "pestphp/pest-plugin-global-assertions": "^1.0",
        "orchestra/testbench": "^7.19"
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/",
            "Benchmark\\": "tests/benchmark/"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage-html coverage",
        "benchmark": "./vendor/bin/phpbench run --report=default"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
